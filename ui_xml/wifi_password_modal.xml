<component>
	<!-- WiFi Password Entry Modal -->
	<!-- Overlay modal for entering WiFi password and connecting -->

	<view extends="lv_obj"
	      width="100%"
	      height="100%"
	      name="wifi_password_modal_root"
	      hidden="true"
	      style_bg_opa="180"
	      style_border_width="0"
	      style_radius="0"
	      style_pad_all="0">

		<!-- Centered modal card -->
		<lv_obj width="400"
		        height="280"
		        align="center"
		        style_bg_opa="255"
		        style_border_width="2"
		        style_border_opa="255"
		        style_radius="16"
		        style_pad_all="20"
		        style_pad_gap="12"
		        flex_flow="column"
		        style_flex_main_place="start"
		        style_flex_cross_place="start">

			<!-- Title -->
			<lv_label name="modal_title"
			          text="Enter WiFi Password"
			          width="100%"
			          style_text_font="#font_modal_title"
			         			          style_text_align="center"/>

			<!-- Network SSID -->
			<lv_label name="modal_ssid"
			          text="Network"
			          width="100%"
			          style_text_font="montserrat_14"
			         			          style_text_align="center"
			          style_margin_bottom="8"/>

			<!-- Password input -->
			<lv_textarea name="password_input"
			             width="100%"
			             height="60"
			             placeholder="Password"
			             password_mode="true"
			             max_length="64"
			             one_line="true"
			            			             style_bg_opa="255"
			             style_border_width="1"
			            			             style_radius="8"
			             style_pad_all="12"
			             style_text_font="montserrat_16"
			            />

			<!-- Status message (hidden by default, shown on error) -->
			<lv_label name="modal_status"
			          text=""
			          width="100%"
			          hidden="true"
			          style_text_font="montserrat_12"
			         			          style_text_align="center"
			          style_margin_top="4"/>

			<!-- Button row -->
			<lv_obj width="100%"
			        height="50"
			        style_bg_opa="0"
			        style_border_width="0"
			        style_pad_all="0"
			        style_pad_gap="12"
			        flex_flow="row"
			        style_flex_main_place="end"
			        style_flex_cross_place="center">

				<!-- Cancel button -->
				<lv_button name="modal_cancel_btn"
				           width="100"
				           height="50"
				          				           style_bg_opa="255"
				           style_border_width="1"
				          				           style_radius="8">
					<event_cb trigger="clicked" callback="on_modal_cancel_clicked"/>
					<lv_label text="Cancel"
					          style_text_font="montserrat_16"
					         />
				</lv_button>

				<!-- Connect button -->
				<lv_button name="modal_connect_btn"
				           width="120"
				           height="50"
				          				           style_bg_opa="255"
				           style_border_width="0"
				           style_radius="8">
					<event_cb trigger="clicked" callback="on_modal_connect_clicked"/>
					<lv_label text="Connect"
					          style_text_font="montserrat_16"
					         />
				</lv_button>
			</lv_obj>
		</lv_obj>
	</view>
</component>
