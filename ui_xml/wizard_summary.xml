<component>
	<!-- First-Run Wizard: Summary Screen -->
	<!-- Shows all selections before saving configuration -->

	<view extends="lv_obj"
	      width="100%"
	      height="100%"
	      style_bg_opa="0"
	      style_border_width="0"
	      style_pad_all="0"
	      flex_flow="column"
	      style_flex_main_place="start" style_flex_cross_place="center"
	      name="wizard_summary_root">

		<!-- Help text -->
		<lv_label text="Review your configuration and click Finish to save"
		          width="100%"
		          style_text_font="montserrat_20"
		          style_pad_bottom="#gap_small"/>

		<!-- Summary container -->
		<lv_obj width="100%"
		        height="auto"
		        style_bg_opa="255"
		        style_border_width="0"
		        style_radius="12"
		        style_pad_all="#padding_normal"
		        style_pad_gap="#gap_small"
		        flex_flow="column"
		        style_flex_main_place="start" style_flex_cross_place="start">

			<!-- Connection settings -->
			<lv_label text="Printer Connection"
			          style_text_font="montserrat_20"
			          style_pad_bottom="8"/>

			<lv_obj width="100%"
			        height="auto"
			        style_bg_opa="0"
			        style_border_width="0"
			        style_pad_all="0"
			        style_pad_gap="4"
			        flex_flow="row">
				<lv_label text="Printer Name:"
				          style_text_font="montserrat_16"
/>
				<lv_label name="summary_printer_name"
				          text="My Printer"
				          style_text_font="montserrat_16"
						          style_pad_left="8"/>
			</lv_obj>

			<lv_obj width="100%"
			        height="auto"
			        style_bg_opa="0"
			        style_border_width="0"
			        style_pad_all="0"
			        style_pad_gap="4"
			        flex_flow="row">
				<lv_label text="Printer Type:"
				          style_text_font="montserrat_16"
/>
				<lv_label name="summary_printer_type"
				          text="Generic Klipper"
				          style_text_font="montserrat_16"
						          style_pad_left="8"/>
			</lv_obj>

			<lv_obj width="100%"
			        height="auto"
			        style_bg_opa="0"
			        style_border_width="0"
			        style_pad_all="0"
			        style_pad_gap="4"
			        flex_flow="row">
				<lv_label text="Network Address:"
				          style_text_font="montserrat_16"
/>
				<lv_label name="summary_host"
				          text="192.168.1.100:7125"
				          style_text_font="montserrat_16"
						          style_pad_left="8"/>
			</lv_obj>

			<!-- Hardware mapping -->
			<lv_label text="Hardware Mapping"
			          style_text_font="montserrat_20"
			          style_pad_top="#gap_normal"
			          style_pad_bottom="8"/>

			<lv_obj width="100%"
			        height="auto"
			        style_bg_opa="0"
			        style_border_width="0"
			        style_pad_all="0"
			        style_pad_gap="4"
			        flex_flow="row">
				<lv_label text="Heated Bed:"
				          style_text_font="montserrat_16"
/>
				<lv_label name="summary_bed"
				          text="heater_bed"
				          style_text_font="montserrat_16"
						          style_pad_left="8"/>
			</lv_obj>

			<lv_obj width="100%"
			        height="auto"
			        style_bg_opa="0"
			        style_border_width="0"
			        style_pad_all="0"
			        style_pad_gap="4"
			        flex_flow="row">
				<lv_label text="Hotend:"
				          style_text_font="montserrat_16"
/>
				<lv_label name="summary_hotend"
				          text="extruder"
				          style_text_font="montserrat_16"
						          style_pad_left="8"/>
			</lv_obj>

			<lv_obj width="100%"
			        height="auto"
			        style_bg_opa="0"
			        style_border_width="0"
			        style_pad_all="0"
			        style_pad_gap="4"
			        flex_flow="row">
				<lv_label text="Part Cooling Fan:"
				          style_text_font="montserrat_16"
/>
				<lv_label name="summary_part_fan"
				          text="fan"
				          style_text_font="montserrat_16"
						          style_pad_left="8"/>
			</lv_obj>
		</lv_obj>

		<!-- Success message -->
		<lv_label text="âœ“ Configuration will be saved when you click Finish"
		          width="100%"
		          style_text_font="montserrat_16"
		          style_pad_top="#padding_normal"/>

	</view>
</component>
