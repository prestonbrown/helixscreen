<!-- Reusable Settings Action Row Component -->
<!-- Creates a clickable row that opens a sub-panel or performs an action -->
<!-- Usage: <setting_action_row label="Network Settings" icon="mat_lan" description="WiFi and Ethernet"/> -->
<!-- Props:
     - label: Primary label text
     - icon: Optional left icon (e.g., "mat_wifi"). If empty, no icon shown.
     - description: Optional secondary description text below label
-->
<!-- Note: Parent C++ code attaches click handler to "action_row" by name -->
<component>
  <api>
    <prop type="string" name="label" default="Action"/>
    <prop type="string" name="icon" default=""/>
    <prop type="string" name="description" default=""/>
  </api>
  <view extends="lv_obj" name="action_row" width="100%" height="content" flex_flow="row" style_flex_main_place="start" style_flex_cross_place="center" style_bg_opa="0" style_border_width="0" style_pad_left="#padding_normal" style_pad_right="#padding_normal" style_pad_top="#padding_small" style_pad_bottom="#padding_small" style_pad_gap="#gap_small" clickable="true" scrollable="false">
    <!-- Left side: Optional icon -->
    <icon name="row_icon" src="$icon" size="sm" variant="secondary"/>
    <!-- Middle: Label and optional description -->
    <lv_obj width="content" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column" style_pad_gap="#gap_tiny" flex_grow="1" scrollable="false">
      <lv_label name="label" text="$label" style_text_font="#font_body" style_text_color="#text_primary"/>
      <!-- Description shown only if provided - C++ can hide via binding if needed -->
      <lv_label name="description" text="$description" style_text_font="#font_small" style_text_color="#text_secondary"/>
    </lv_obj>
    <!-- Right side: Chevron indicator -->
    <icon src="mat_arrow_right" size="xs" variant="secondary"/>
  </view>
</component>
