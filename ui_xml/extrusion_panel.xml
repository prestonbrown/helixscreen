<component>
  <!-- Extrusion Sub-Screen -->
  <!-- Extrude/Retract controls with safety checks -->
  <!-- Uses shared backdrop from navigation system -->
  <view extends="lv_obj" name="extrusion_panel" width="#overlay_panel_width" height="100%" align="right_mid" style_border_width="0" style_pad_all="0" scrollable="false" flex_flow="column">
      <!-- Header Bar -->
      <header_bar name="extrusion_header" title="Extrude / Retract"/>
      <!-- Content Area: Two Columns -->
      <lv_obj name="extrusion_content" flex_grow="1" width="100%" style_bg_opa="0" style_pad_all="#padding_normal" scrollable="false" style_border_width="0" style_border_opa="0" flex_flow="row" style_flex_main_place="space_between">
        <!-- Left Column (50%): Extruder Visualization + Temperature Status -->
        <lv_obj name="left_column" width="50%" height="100%" style_bg_opa="0" style_pad_all="0" scrollable="false" style_border_width="0" style_border_opa="0" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="center" style_pad_gap="16">
          <!-- Extruder Visualization -->
          <ui_card name="viz_container" width="280" height="320" style_min_height="200" style_max_height="320" style_radius="#border_radius_large" scrollable="false" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center">
            <icon src="mat_extrude" variant="accent"/>
          </ui_card>
          <!-- Temperature Status Card -->
          <ui_card name="temp_status_card" width="280" height="80" style_radius="8" style_pad_all="16" scrollable="false" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center" style_pad_gap="4">
            <text_small text="Nozzle Temperature" align="center"/>
            <lv_label name="temp_status_display" bind_text="extrusion_temp_status" style_text_font="#font_heading" align="center"/>
          </ui_card>
        </lv_obj>
        <!-- Right Column (50%): Controls -->
        <lv_obj name="right_column" width="50%" height="100%" style_bg_opa="0" style_pad_all="0" scrollable="false" style_border_width="0" style_border_opa="0" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="center" style_pad_gap="16">
          <!-- Amount Selector Label -->
          <lv_label text="Extrusion Amount:" width="100%" style_text_font="#font_body" style_text_align="left"/>
          <!-- Amount Radio Buttons (4 options: 5mm, 10mm, 25mm, 50mm) -->
          <lv_obj name="amount_selector" width="100%" height="48" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false" flex_flow="row" style_flex_main_place="center" style_flex_cross_place="center" style_pad_gap="8">
            <lv_button name="amount_5mm" width="80" height="40" style_radius="6" style_border_width="0">
              <text_small text="5mm" align="center"/>
            </lv_button>
            <lv_button name="amount_10mm" width="80" height="40" style_radius="6" style_border_width="0">
              <text_small text="10mm" align="center"/>
            </lv_button>
            <lv_button name="amount_25mm" width="80" height="40" style_radius="6" style_border_width="0">
              <text_small text="25mm" align="center"/>
            </lv_button>
            <lv_button name="amount_50mm" width="80" height="40" style_radius="6" style_border_width="0">
              <text_small text="50mm" align="center"/>
            </lv_button>
          </lv_obj>
          <!-- Extrude Button (Green) -->
          <lv_button name="btn_extrude" width="100%" height="72" style_radius="8" style_border_width="0" flex_flow="row" style_flex_main_place="center" style_flex_cross_place="center" style_pad_gap="#gap_normal">
            <lv_label text="&#x2191;" style_text_font="montserrat_28"/>
            <lv_label text="Extrude" style_text_font="#font_heading"/>
          </lv_button>
          <!-- Retract Button (Orange) -->
          <lv_button name="btn_retract" width="100%" height="72" style_radius="8" style_border_width="0" flex_flow="row" style_flex_main_place="center" style_flex_cross_place="center" style_pad_gap="#gap_normal">
            <lv_label text="&#x2193;" style_text_font="montserrat_28"/>
            <lv_label text="Retract" style_text_font="#font_heading"/>
          </lv_button>
          <!-- Safety Warning Card (shown when nozzle < 170Â°C) -->
          <lv_obj name="safety_warning" width="100%" height="96" style_bg_opa="50" style_border_width="2" style_radius="8" style_pad_all="16" scrollable="false" hidden="true" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="start" style_pad_gap="8">
            <text_small text="&#x26A0; Nozzle must be &gt;170&#xB0;C to extrude" width="100%" style_text_align="left"/>
            <text_small name="warning_temps" bind_text="extrusion_warning_temps" width="100%" style_text_align="left"/>
          </lv_obj>
        </lv_obj>
      </lv_obj>
  </view>
</component>
