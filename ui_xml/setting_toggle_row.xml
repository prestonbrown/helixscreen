<!-- Reusable Settings Toggle Row Component -->
<!-- Creates a setting row with label, optional icon, and switch toggle -->
<!-- Usage: <setting_toggle_row label="Dark Mode" icon="mat_light_img" subject="settings_dark_mode"/> -->
<!-- Props:
     - label: Primary label text
     - icon: Optional left icon (e.g., "mat_wifi"). If empty, no icon shown.
     - description: Optional secondary description text below label
     - subject: Subject name for two-way binding (handled by C++)
-->
<component>
  <api>
    <prop type="string" name="label" default="Setting"/>
    <prop type="string" name="icon" default=""/>
    <prop type="string" name="description" default=""/>
    <prop type="string" name="subject" default=""/>
  </api>
  <view extends="lv_obj" name="setting_row" width="100%" height="content" flex_flow="row" style_flex_main_place="start" style_flex_cross_place="center" style_bg_opa="0" style_border_width="0" style_pad_left="#padding_normal" style_pad_right="#padding_normal" style_pad_top="#padding_small" style_pad_bottom="#padding_small" style_pad_gap="#gap_small" scrollable="false">
    <!-- Left side: Optional icon -->
    <icon name="row_icon" src="$icon" size="sm" variant="secondary"/>
    <!-- Middle: Label and optional description -->
    <lv_obj width="content" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column" style_pad_gap="#gap_tiny" flex_grow="1" scrollable="false">
      <lv_label name="label" text="$label" style_text_font="#font_body" style_text_color="#text_primary"/>
      <!-- Description shown only if provided -->
      <lv_label name="description" text="$description" style_text_font="#font_small" style_text_color="#text_secondary"/>
    </lv_obj>
    <!-- Right side: Switch toggle -->
    <lv_switch name="toggle" width="50" height="28"/>
  </view>
</component>
