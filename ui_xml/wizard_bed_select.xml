<component>
	<!-- First-Run Wizard: Bed Select Screen -->
	<!-- User selects which heater and sensor controls the heated bed -->

	<view extends="lv_obj"
	      width="100%"
	      height="100%"
	      style_bg_opa="0"
	      style_border_width="0"
	      style_pad_all="0"
	      flex_flow="column"
	      style_flex_main_place="start" style_flex_cross_place="center"
	      name="wizard_bed_select_root">

		<!-- Help text -->
		<lv_label text="Choose which heater controls your print bed"
		          width="100%"
		          style_text_font="montserrat_20"
		          style_pad_bottom="#gap_small"/>

		<!-- Selection container -->
		<lv_obj width="100%"
		        height="auto"
		        style_bg_opa="255"
		        style_border_width="0"
		        style_radius="12"
		        style_pad_all="#padding_normal"
		        style_pad_gap="#gap_normal"
		        flex_flow="column"
		        style_flex_main_place="start" style_flex_cross_place="start">

			<!-- Heater selection -->
			<lv_label text="Bed Heater"
			          style_text_font="montserrat_20"
				          style_pad_bottom="#gap_small"/>

			<lv_dropdown name="bed_heater_dropdown"
			             options="heater_bed"
			             width="100%"
			             height="#header_height"
			            			            			             style_text_font="montserrat_20"
			             style_border_width="#input_border_width"
			            			             style_border_opa="100%"
			             style_radius="#card_radius"
			             style_pad_all="#padding_card"/>

			<!-- Sensor selection -->
			<lv_label text="Bed Temperature Sensor"
			          style_text_font="montserrat_20"
				          style_pad_top="#gap_normal"
			          style_pad_bottom="#gap_small"/>

			<lv_dropdown name="bed_sensor_dropdown"
			             options="heater_bed"
			             width="100%"
			             height="#header_height"
			            			            			             style_text_font="montserrat_20"
			             style_border_width="#input_border_width"
			            			             style_border_opa="100%"
			             style_radius="#card_radius"
			             style_pad_all="#padding_card"/>
		</lv_obj>

	</view>
</component>
